<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89D7E1"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivHinh"
        android:layout_width="151dp"
        android:layout_height="176dp"
        android:src="@drawable/nhacbe" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:gravity="center_vertical"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/macasi"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã Ca Sĩ :"
            />

        <TextView
            android:id="@+id/tencasi"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Ca Sĩ :"
            />

        <TextView
            android:id="@+id/ngaysinh"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày Sinh :"/>
        <TextView
            android:id="@+id/quoctich"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quốc Tịch :"/>
        <TextView
            android:id="@+id/gioitinh"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới Tính :"/>


    </LinearLayout>

</LinearLayout>